{
  "compilerOptions": {
    "module": "nodenext",
    "esModuleInterop": true,
    "target": "es2017",
    "declaration": true,
    "rootDir": ".",
    "outDir": "./lib",
    "strict": true,
    "lib": ["es6"],
    "sourceMap": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "alwaysStrict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "noEmitOnError": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"],
  "ts-node": {
      "esm": true
  }
}
